<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="br.pe.recife.tafeito.gui.FornecedorPrincipalActivity">

    <LinearLayout
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view1"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:onClick="oferta_fornecedor"
            card_view:cardBackgroundColor="#FF0000"
            card_view:cardCornerRadius="15dp"
            android:layout_weight="0.97">

            <TextView
                android:id="@+id/info_text3"
                android:layout_width="120dp"
                android:layout_height="153dp"
                android:elevation="2dp"
                android:text="@string/oferta"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:onClick="ofertar"
                android:layout_gravity="center"
                android:src="@drawable/ic_add_alert_black_36dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view2"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="agendamento_fornecedor"
            card_view:cardBackgroundColor="#FF0000"
            card_view:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:onClick="agendar"
                android:src="@drawable/ic_date_range_black_36dp" />

            <TextView
                android:id="@+id/info_text4"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:elevation="2dp"
                android:text="@string/agendamento"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view3"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:onClick="servico_fornecedor"
            card_view:cardBackgroundColor="#FF0000"
            card_view:cardCornerRadius="15dp"
            android:layout_weight="0.07">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:onClick="servico"
                android:layout_gravity="center"
                android:src="@drawable/ic_card_travel_black_36dp"
                />

            <TextView
                android:id="@+id/info_text2"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:elevation="2dp"
                android:text="@string/servico"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold">
            </TextView>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
